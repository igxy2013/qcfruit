/* pages/index/index.wxss */

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.logo {
  width: 400rpx;
  height: 200rpx;
}

.settings-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  padding: 20rpx 30rpx;
  margin: 20rpx auto;
  width: 120rpx;
  color: #666;
  transition: all 0.3s ease;
}

.settings-btn:active {
  background-color: #e9ecef;
  transform: scale(0.95);
}

.settings-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.settings-text {
  font-size: 24rpx;
  color: #666;
}

.picker-text {
  color: #2d3748;
  line-height: 36rpx;
}

.form-input:focus {
  border-color: #3182ce;
}

.form-picker:focus {
  border-color: #3182ce;
}

.form-input[disabled] {
  background-color: #f7fafc;
  color: #718096;
  cursor: not-allowed;
} 