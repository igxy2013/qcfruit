/* pages/index/index.wxss */

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 20rpx 30rpx;
  position: relative;
}

.logo {
  width: 400rpx;
  height: 200rpx;
}

.settings-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  transition: all 0.3s ease;
  position: absolute;
  right: 30rpx;
  top: 0;
  padding: 10rpx 0;
}

.settings-btn:active {
  background-color: #e9ecef;
  transform: scale(0.95);
}

.settings-text {
  font-size: 28rpx;
  color: #666;
  text-decoration: underline;
  text-underline-offset: 4rpx;
}

.picker-text {
  color: #2d3748;
  line-height: 36rpx;
}

.form-input:focus {
  border-color: #3182ce;
}

.form-picker:focus {
  border-color: #3182ce;
}

.form-input[disabled] {
  background-color: #f7fafc;
  color: #718096;
  cursor: not-allowed;
} 