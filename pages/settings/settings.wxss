.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  position: relative;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  height: 80rpx;
}

.back-btn {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  color: #007aff;
  font-size: 32rpx;
  padding: 10rpx;
  z-index: 10;
}

.title {
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.add-btn {
  background-color: #007aff;
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
}

.add-form {
  background-color: #f8f8f8;
  padding: 40rpx;
  border-radius: 15rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 12rpx;
  color: #4a5568;
  font-weight: 500;
  font-size: 28rpx;
}

.form-input {
  width: 100%;
  height: 60rpx;
  padding: 12rpx 16rpx;
  border: 2rpx solid #cbd5e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  line-height: 36rpx;
}

.form-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background-color: #007aff;
  color: #fff;
}

.basket-list {
  margin-top: 30rpx;
}

.list-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.basket-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.basket-info {
  flex: 1;
}

.basket-name {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.basket-weight {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-top: 5rpx;
}

.delete-btn {
  background-color: #ff3b30;
  color: #fff;
  padding: 15rpx 25rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.tips {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 15rpx;
}

.tip-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
} 